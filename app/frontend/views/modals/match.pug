#matchModal.modal.fade(tabindex='-1', aria-labelledby='matchModalLabel', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
        form.modal-content(method='POST', action='/match/'+tournoi._id)
            .modal-header
                h2#matchModalLabel.modal-title Match
                button.close(type='button', data-dismiss='modal', aria-label='Annuler')
                    span(aria-hidden='true') Ã—
            .modal-body
                .form-group
                    label(for='j1') Joueur 1
                        select#j1.custom-select(name="j1" required)
                            option(value='' selected) Choisir un joueur
                            each participant in participants
                                if(participant.joueur)
                                    option(value=participant._id) #{participant.joueur.nom} #{participant.joueur.prenom}
                                else
                                    option(value=participant._id) GHOST
                
                h1 VS

                .form-group
                    label(for='j2') Joueur 2
                        select#j2.custom-select(name="j2" required)
                            option(value='' selected) Choisir un joueur
                            each participant in participants
                                if(participant.joueur)
                                    option(value=participant._id) #{participant.joueur.nom} #{participant.joueur.prenom}
                                else
                                    option(value=participant._id) GHOST
            .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Annuler
                button.btn.btn-primary(type='submit') Ajouter