html
    include headHtml
    
    body.d-flex.flex-column.h-100

        include header

        main.flex-shrink-0(role="main" style="padding-top: 100px")
            //-if locals.retour
                aside.container
                    .row.justify-content-center
                        if retour.error
                            .col-md.alert.alert-dismissible.alert-danger
                                p=retour.error
                        else if retour.success
                            .col-md.alert.alert-dismissible.alert-success
                                p=retour.success

            .container
                block title
                    .row.justify-content-center
                        .col-md.p-4
                            h1=title
                block content

        include footer